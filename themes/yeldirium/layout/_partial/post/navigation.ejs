<nav class="post__navigation">
  <% if (post.prev || post.next){ %>
    <ul class="post__navigation-list">
      <% if (post.prev){ %>
        <li class="post__navigation-prev">
          <a href="<%- url_for(post.prev.path) %>" title="<%= post.prev.title || '(no title)' %>">
            <i class="fas fa-angle-left" aria-hidden="true"></i><span>&nbsp;&nbsp;<%= __('navigation.newer') %></span>
          </a>
        </li>
      <% } %>
      <% if (post.next){ %>
        <li class="post__navigation-next">
          <a href="<%- url_for(post.next.path) %>" title="<%= post.next.title || '(no title)' %>">
            <span><%= __('navigation.older') %>&nbsp;&nbsp;</span><i class="fas fa-angle-right" aria-hidden="true"></i>
          </a>
        </li>
      <% } %>
    </ul>
  <% } %>
</nav>
